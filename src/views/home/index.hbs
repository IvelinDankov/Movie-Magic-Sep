
{{#if isSearch}}
<section id="search">
  <h1>Search</h1>
  <form method="get" class="form">
    <input type="text" class="search" name="search" placeholder="Title..." value="{{filter.search}}"/>
    <input type="text" name="genre" class="genre" placeholder="Genre..." value="{{filter.genre}}"/>
    <input type="number" name="year" class="year" placeholder="Year..." value="{{filter.year}}"/>
    <input type="submit" value="search" />
  </form>
</section>
{{/if}}

<section id="catalog">
  <h1>All Movies</h1>
  <div class="band">

    {{#each movies}}
     {{>movie}}

    {{else}}
      <div class="no-posts">
        <p class="no-offer">There are no posts yet...</p>
      </div>
    {{/each}}

    <!-- If there are still no posts in the database display: -->
    <!-- <div class="no-posts">
                        <p class="no-offer">There are no posts yet...</p>
                    </div> -->
  </div>
</section>